rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra principal: permite que usuários acessem apenas seus próprios dados.
    // Qualquer documento sob /users/{userId} só pode ser lido ou escrito
    // se o ID do usuário autenticado corresponder ao {userId} no caminho.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra de fallback: nega acesso a qualquer outro caminho por padrão.
    // Isso garante que nenhuma coleção fora de /users/{userId} seja acidentalmente exposta.
    match /{path=**} {
        allow read, write: if false;
    }
  }
}
